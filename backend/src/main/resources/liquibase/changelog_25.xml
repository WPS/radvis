<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.10.xsd">

  <changeSet id="RAD-2908" author="tir">
    <sql>
      UPDATE fuehrungsform_attribut_gruppe fuehrungsform_ag
      SET is_zweiseitig = true FROM kante k
      WHERE fuehrungsform_ag.id = k.fuehrungsform_attribut_gruppe_id
        AND k.is_zweiseitig
        AND NOT fuehrungsform_ag.is_zweiseitig;
    </sql>
    <sql>
      UPDATE fahrtrichtung_attribut_gruppe fahrtrichtung_ag
      SET is_zweiseitig = true FROM Kante k
      WHERE fahrtrichtung_ag.id = k.fahrtrichtung_attributgruppe_id
        AND k.is_zweiseitig
        AND NOT fahrtrichtung_ag.is_zweiseitig;
    </sql>
  </changeSet>
</databaseChangeLog>
