			<column name="grundnetz_kanten_id"/>
		</createIndex>
	</changeSet>
	<changeSet id="RAD-2286" author="par">
		<addColumn tableName="kante_osm_way_ids_aud">
			<column name="setordinal" type="integer"/>
		</addColumn>
	</changeSet>
